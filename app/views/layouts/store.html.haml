!!! 5
%html
  %head
    %meta{ "http-qeuiv" => "Content-Type", :content => "text/html: charset=utf-8" }
    %title 買鮮カタログ

    != stylesheet_link_tag 'reset', 'text', '960','store'
    != javascript_include_tag :defaults
    != csrf_meta_tag
  %body#store.container_12
    #header.grid_12
      %h1 買鮮カタログ
    .clear
    #columns
      #side.grid_3
        #cart
          = render :partial => 'cart', :object => @cart
        %ul#nav
          %li
            = link_to "トップ", store_path
          %li
            %a{:href => "#"}ニュース
          %li
            %a{:href => "#"}お問い合わせ
          %li
            %a{:href => "#"}ご利用ガイド
      #main.grid_6.suffix_3
        - if flash[:notice]
          .notice= flash[:notice]
        - if flash[:alert]
          .alert= flash[:alert]
        != yield
      .clear
    #footer.grid_12
      %p Copyright (C) 2010 Enishi Tech Inc. All Rights Reserved.
    .clear
