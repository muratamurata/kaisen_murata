.cart-title 買い物カゴ

%p
  = @product.name

%table
  - @cart.items.each do |item|
    %tr
      %td
        = item.name
        &times;
        = item.quantity
      %td.item-price
        = number_with_delimiter(item.price)
        円
      %td
        = button_to "この商品をキャンセル",:action => "remove_item_from_cart" ,:id => item.product_id

  %tr.total-line
    %td 合計）
    %td.total-cell
      = number_with_delimiter(@cart.total_price)
      円 

= button_to "買い物カゴを空にする", :action => "empty_cart"

